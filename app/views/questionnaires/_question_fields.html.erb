<div class='nested-fields'>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-6">
          <h3 class="text-center">Вопрос</h3>
        </div>
        <div class="col-5">
          <h3 class="text-center">Ответы</h3>
        </div>
        <div class="col-1">
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.input :question_text, label: false %>
          <%= f.input :correct_answer, as: :select,
                      collection: 1..f.object.question_answers.count, label: 'Правильный ответ' %>
        </div>
        <div class="col">
          <div id='questions'>
            <%= f.simple_fields_for :question_answers do |question_answer| %>
              <%= render 'question_answer_fields', :f => question_answer %>
            <% end %>
            <div class='links'>
              <%= link_to_add_association 'Добавить ответ', f, :question_answers, class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      </div>
      <hr/>
      <div align="left">
        <%= link_to_remove_association "удалить вопрос", f, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
  <br>
</div>