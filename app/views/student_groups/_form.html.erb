<%= simple_form_for(student_group, { url: student_group.try(:new_record?) ? user_student_groups_path(@teacher) : student_group }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :students, input_html: {
        class: 'select2-student-select',
        'data-select2-url': student_select_url(format: :json)
    } %>
  </div>

  <div class="form-actions">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= yield(:form_actions_before) %>
      <%= f.button :submit, 'Сохранить список', class: 'btn btn-outline-success' %>
      <%= yield(:form_actions_after) %>
    </div>
  </div>
<% end %>
