<p id="notice"><%= notice %></p>

<h1>Home Works</h1>

<table>
  <thead>
    <tr>
      <th>Group or student</th>
      <th>Check point</th>
      <th>Comment</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_works.each do |home_work| %>
      <tr>
        <td><%= home_work.group_or_student %></td>
        <td><%= home_work.check_point %></td>
        <td><%= home_work.comment %></td>
        <td><%= home_work.teacher %></td>
        <td><%= link_to 'Show', home_work %></td>
        <td><%= link_to 'Edit', edit_home_work_path(home_work) %></td>
        <td><%= link_to 'Destroy', home_work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home Work', new_user_home_work_path(@user) %>
