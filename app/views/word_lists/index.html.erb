<p id="notice"><%= notice %></p>

<h1>Word Lists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>list_type</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_lists.each do |word_list| %>
      <tr>
        <td><%= word_list.name %></td>
        <td><%= word_list.list_type %></td>
        <td><%= link_to 'Show', word_list %></td>
        <td><%= link_to 'Training', training_word_list_path(word_list)%></td>
        <td><%= link_to 'Edit', edit_word_list_path(word_list) %></td>
        <td><%= link_to 'Destroy', word_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word List', new_word_list_path %>
